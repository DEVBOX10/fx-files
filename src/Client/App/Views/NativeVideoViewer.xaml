<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Functionland.FxFiles.Client.App.Views.NativeVideoViewer"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:media="clr-namespace:CommunityToolkit.Maui.MediaElement;assembly=CommunityToolkit.Maui.MediaElement"
    Title="NativeVideoViewer">
    <VerticalStackLayout Margin="{OnPlatform WinUI='0,40,0,0'}">
        <Button
            Margin="20,0"
            Clicked="close_Clicked"
            HorizontalOptions="Start"
            Text="Close" />
        <Button
            Margin="20,0"
            x:Name="pip"
            HorizontalOptions="Start"
            Clicked="Minimize"
            Text="File Picker" />
        
        <media:MediaElement
            x:Name="mediaElement"
            AutoPlay="True"
            HeightRequest="500"
            HorizontalOptions="FillAndExpand"
            ShowsPlaybackControls="True"
            VerticalOptions="FillAndExpand" />
    </VerticalStackLayout>
</ContentPage>