@inherits AppComponentBase;

<!-- Body of the sheet -->
<main class="content-body @ContentBodyClass fill column">
    @if (IsImageFile)
    {
        <div class="file-icon-row @(ArtifactType.ToString())-file-icon">
            @*TODO:// image file icon here*@
            <div>
            <img class="file-image-preview" src="sample.jpg">
            </div>
        </div>
    }
    else
    {
        @if (!string.IsNullOrEmpty(FileName))
        {
            <div class="file-icon-row @(ArtifactType.ToString().ToLower())-file-icon">
                <div class="file-icon"></div>
            </div>
        }
    }
    <div class="file-name-row">
        <p class="file-name-text open-sans-regular">@FileName</p>
    </div>
    <div class="file-details-area @FileDetailAreaClass">
        @FileDetailItemFragment
    </div>
    <div class="bottom-body">
        @FileDetailItemActionsFragment
        <div class="close-btn-bottom-action">
            @FileDetailBottomActionFragment
        </div>
    </div>
</main>
