@namespace Functionland.FxFiles.Client.Shared.Components.Modal
@inherits AppComponentBase

<div class="@(_isModalOpen == true? "file-viewer-container" : "")">
    <div class="main-content">
        @if (_isModalOpen == true)
        {
            <button onclick="@(() =>Back())">Back</button>     
        }

        @if (IsSupported<ImageViewer>(_currentArtifact))
        {
            <ImageViewer @ref="_imageRef" CurrentArtifact="@_currentArtifact" FileService="FileService" />
        }
        <VideoViewer @ref="_videoRef" CurrentArtifact="_currentArtifact"  FileService="FileService" />
    </div>
</div>
