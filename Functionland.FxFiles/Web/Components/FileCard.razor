@inherits AppComponentBase;

<div class="file-card-container @(IsFavorite ? "favorite" : "") @(IsPressed ? "pressed-card" : "") @(IsDisable ? "disabled-card" : "")">
    <div class="file-card-media">
        <div class="tag-wrapper">
            <FxTag Title="@Localizer[nameof(AppStrings.SharedFileCardTag)]" TagType="FxTagType.Regular" Width="51px" />
        </div>
        <div class="pin-defualt-icon"></div>
    </div>

    <div class="file-card-content">
        <div class="card-file-name">
            <div class="file-icon"></div>

            <div class="file-name-container">
                <span class="file-name">@FileName</span>.<span class="file-format">@FileFormat</span>
            </div>
        </div>

        <div class="file-info">
            <div class="modified-date">@ModifiedDate</div> | <span class="file-size">@FileSize</span>
        </div>
    </div>
</div>
