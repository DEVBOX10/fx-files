@inherits AppComponentBase;


@if(IsPartial)
{
    <input class="input-box input-partial search-icon" value="@Text" type="text" placeholder="@Localizer[nameof(AppStrings.InputSearchParial)]" />
}
else
{
    <div class="input-full-width">
        <input class="input-box search-icon" value="@Text" type="text" placeholder="@Localizer[nameof(AppStrings.InputSearchFullWidth)]" />
        <button class="button-search-input">@Localizer[nameof(AppStrings.ButtonSearchFullWidth)]</button>
    </div>
}
