@inherits AppComponentBase;


<!-- The sheet component -->
<div class="sheet column items-center justify-end @(IsClose ? "close-bottom-sheet-animation" : "show-bottom-sheet-animation")">
    <!-- Dark background for the sheet -->
    <div class="overlay"></div>

    <!-- The sheet itself -->
    <div class="contents column">
        <!-- Sheet controls -->
        @if (IsCloseAble)
        {
            <div class="controls">
                <!-- Button to close the sheet -->
                <button @onclick="( async()=> await(Close()))" class="close-sheet close-button" type="button" title="Close the sheet"><img class="close-button-icon" src="/images/icons/lightDesignSystem/close-btn.svg" /></button>
            </div>
        }

        @if (ContentRenderFragment != null)
        {
            @ContentRenderFragment
        }
    </div>
</div>