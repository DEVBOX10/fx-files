<div class="list-title">@ListTitle</div>

@if (!IsSelectionMode)
{
    <div class="action-bar">
        <div class="left-actions">
            <div class="selected-sort" @onclick="OnSortChange">Name</div>
            <div class="sort-order @SortOrder-order" @onclick="ToggleSortOrder"></div>
        </div>
        <div class="right-actions">
            <div class="action-btn select-all-btn @(IsSelectedAll ? "select-all-filled" : "")" @onclick="ToggleSelectedAll"></div>
            <div class="action-btn list-view-btn @(ViewMode == Common.ViewModeEnum.list ? "list-view-selected" : "")" @onclick="@(() => ChangeViewMode(Common.ViewModeEnum.list))"></div>
            <div class="action-btn grid-view-btn @(ViewMode == Common.ViewModeEnum.grid ? "grid-view-selected" : "")" @onclick="@(() => ChangeViewMode(Common.ViewModeEnum.grid))"></div>
            <div class="action-btn filter-btn"></div>
        </div>
    </div>
}
else
{
    <div class="select-action">
        <div class="info-selection">
            <div class="close-btn" @onclick="(() => IsSelectionMode = false)"></div>
            <div class="item-selected">
                <span class="item-selected-count">2</span>
                <span class="move-selected-items-text">items ready to move</span>
                <span class="item-selected-text">items selected</span>
            </div>
        </div>

        <div class="right-part">
            <div class="icons-action move-icon"></div>
            <div class="icons-action add-folder"></div>
            <div class="icons-action vertical-option-icon"></div>
        </div>
    </div>
}

<div class="list-container @ViewMode-view">
    @foreach (var item in ListItems)
    {
        <ListItem 
            ItemConfig="item"
            ViewMode="ViewMode"
            IsSelectionMode="IsSelectionMode"
            OnPointerUp="(() => PointerUp())"
            OnPointerDown="(() => PointerDown())" />
    }
</div>